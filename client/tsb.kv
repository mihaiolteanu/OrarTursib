#: import main main
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import TabbedPanel kivy.uix.tabbedpanel

MainMenu:

<MainMenu>:
    do_default_tab: False
    bus_tab_content: bus_list
    TabbedPanelItem:
        text: "Buses"
        id: bus_list
        BusList:
            
    TabbedPanelItem:
        text: "Search"
        Label:
            text: "Search for routes"
    TabbedPanelItem:
        text: "Favorites"
        Label:
            text: "Add your favorite routes"
    TabbedPanelItem:
        text: "Settings"
        Label:
            text: "Different settings for tursib"

<BusList@BoxLayout>:
    lst: list_view
    ListView:
        id: list_view
        adapter:
            ListAdapter(data=["1", "2", "3"], cls=main.BusButton)        

<BusButton>:
    size_hint_y: None
    height: "40dp"
    on_press: app.root.show_the_buses(self) 

<StationsList@BoxLayout>:
    lst: list_view
    ListView:
        id: list_view
        adapter:
            ListAdapter(data=[], cls=main.StationButton)        

<StationButton>:
    size_hint_y: None
    height: "40dp"