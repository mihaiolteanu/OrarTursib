MainMenu:

<MainMenu>:
    do_default_tab: False
    bus_tab_content: bus_list
    TabbedPanelItem:
        text: "Buses"
        id: bus_list
        on_touch_down: app.root.show_the_buses()
        #BusList:
        Label:
            text: "seeee?"
            
    TabbedPanelItem:
        text: "Search"
        Label:
            text: "Search for routes"
    TabbedPanelItem:
        text: "Favorites"
        Label:
            text: "Add your favorite routes"
    TabbedPanelItem:
        text: "Settings"
        Label:
            text: "Different settings for tursib"

<BusList@BoxLayout>:
    lst: list_view
    ListView:
        id: list_view
        adapter:
            ListAdapter(data=[], cls=main.BusButton)        

<BusButton>:
    size_hint_y: None
    height: "40dp"
    on_press: app.root.show_the_stations(self) 

<StationsList@BoxLayout>:
    lst: list_view
    bus_number_name: ""
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint_y: None
            height: "40dp"
            markup: True
            text: "[b]{}[/b]".format(root.bus_number_name)
        ListView:
            id: list_view
            adapter:
                ListAdapter(data=[], cls=main.StationButton)        

<StationButton>:
    station: ""
    size_hint_y: None
    height: "40dp"
    on_press: app.root.show_the_timetable(self)